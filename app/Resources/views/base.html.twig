<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Movies{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/meyer.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/styleMovie.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav>
            <ul class="nav nav-tabs nav-justified">
                <li><a href="{{ path('homepage') }}">Homepage</a></li>
                <li><a href="{{ path('movies') }}">List</a></li>
                <li><a href="{{ path('register') }}">Register</a></li>
                <li><a href="{{ path('login_route') }}">Login</a></li>
                <li><a href="{{ path('logout') }}">Logout</a></li>
            </ul>
        </nav>
            
        {# Affiche les flash messages de type "error" #}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {# Affiche les flash messages de type "success" #}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        
        <footer>
                
        </footer>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>